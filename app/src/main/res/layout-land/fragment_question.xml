<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/land_back"
    tools:context=".ui.QuestionFragment">

    <LinearLayout
        android:id="@+id/questions_circle_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/question_1"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/red_question" />

        <ImageView
            android:id="@+id/question_2"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/red_question" />

        <ImageView
            android:id="@+id/question_3"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/red_question" />

        <ImageView
            android:id="@+id/question_4"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/red_question" />

        <ImageView
            android:id="@+id/question_5"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/red_question" />

    </LinearLayout>

    <TextView
        android:id="@+id/question"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/back"
        android:fontFamily="@font/font"
        android:gravity="center"
        android:text="What is the largest mammal in the world?"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/answers_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questions_circle_layout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/answers_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answer_1"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/font"
            android:text="Blue Whale"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answer_2"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/font"
            android:text="Blue Whale"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/answer_1"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answer_3"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/font"
            android:text="Blue Whale"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/answer_1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answer_4"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_style"
            android:fontFamily="@font/font"
            android:text="Blue Whale"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/answer_3"
            app:layout_constraintTop_toBottomOf="@id/answer_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>